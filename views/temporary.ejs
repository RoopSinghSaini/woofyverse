<div class="container">
 
  <center><h1 class="animate-charcter" style="
    font-weight: 700; font-size:
    55px; text-align: center;
    line-height: 1.2;">Adopt A Buddy</h1></center><br>
     <div class="jumbotron">
      <div class="row">
        <div class="col-md-12 text-center">
          <h3 class="animate-charcter"> <%=fact%> </h3>
        </div>
      </div>
      
      
   
  <% if(noMatch !== null) { %>
    <center>
    <h3><%= noMatch %></h3>
  </center>
  <center>
    <p>
      <form action="/experience-adoption" method="GET" class="form-inline">
        <div class="form-group">
         <input id="search-box" inputmode="search" spellcheck="true"  autocomplete="on" type="text" name="state" placeholder="Search dogs by State" class="form-control">
          <input id="search-box"  type="text" name="city" placeholder="Search dogs by City" class="form-control">
          <input type="submit" inputmode="search" spellcheck="true" autocomplete="on" value="Search" class="btn btn-primary">
        </div>
      </form>
    </p>
  </center>
   
    <% } else { %>
      <center>
    <p>
      <form action="/experience-adoption" method="GET" class="form-inline">
        <div class="form-group">
         <input id="search-box"  spellcheck="true"  autocomplete="on" type="text" name="state" inputmode="search" placeholder="Search dogs by State" class="form-control">
          <input  id="search-box" type="text" name="city" placeholder="Search dogs by City" class="form-control">
          <input type="submit" inputmode="search" spellcheck="true"  autocomplete="on" value="Search" class="btn btn-primary">
